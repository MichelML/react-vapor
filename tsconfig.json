{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "commonjs",
    "allowJs": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./dist/split/",
    "removeComments": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "plugins": [
    {
        "transform": "ts-transformer-keys/transformer"
    }
  ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/*.spec.*"
  ]
}
